<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.api.grp.mapper.UserMapper" >

    <cache eviction="LRU" flushInterval="60000"/>

    <select id="getUser" parameterType="long" resultType="UserBean">
        select * from user where id= #{id}
    </select>

    <insert id="saveUser" parameterType="UserBean">
        INSERT into
        user(user_name,password,sex,real_name,card_num)
        values(#{userName},#{password},#{sex},#{realName},#{cardNum})
    </insert>

    <update id="updateUser" parameterType="UserBean">
      update user
      set
      user_name =#{userName},
      password =#{password},
      sex =#{sex},
      real_name =#{realName},
      card_num =#{cardNum}
      where id= #{id}
    </update>

    <delete id="delUser" parameterType="long">
      delete from user where id =#{id}
    </delete>

</mapper>